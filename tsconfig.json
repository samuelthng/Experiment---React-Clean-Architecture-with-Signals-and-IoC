{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ESNext",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true, // @preact/signals-react
    "experimentalDecorators": true, // TSyringe
    "emitDecoratorMetadata": true, // TSyringe
    "useDefineForClassFields": true, // MobX
  }
}
